#!/bin/bash

# Example: check-gem zeitwerk

GEM_NAME=$1

if [[ -z "$GEM_NAME" ]]; then
  echo "Usage: $0 <gem_name>"
  exit 1
fi

for version in $(asdf list ruby | awk '{print $1}'); do
  echo "Ruby $version:"
  asdf shell ruby "$version" && gem list "$GEM_NAME" | grep "$GEM_NAME" || echo "No $GEM_NAME installed"
done
