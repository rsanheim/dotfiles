#!/usr/bin/env bash

# see https://github.com/fireice-uk/xmr-stak-cpu/pull/400
brew install hwloc libmicrohttpd gcc openssl cmake

git clone https://github.com/rsanheim/xmr-stak-cpu.git $HOME/src/xmr-stak-cpu
pushd $HOME/src/xmr-stak-cpu
git checkout dev-rsanheim
cmake . -DOPENSSL_ROOT_DIR=/usr/local/opt/openssl
make install
popd
cp $HOME/src/rsanheim/dotfiles-private/xmr-stak-cpu-mac $HOME/src/xmr-stak-cpu/bin/config.txt
